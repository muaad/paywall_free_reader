<body>

  <!-- Hero Section -->
  <section class="hero-section text-center">
    <div class="container">
      <h1 class="display-4 mb-4">Unlock Unlimited Access to Online Content</h1>
      <p class="lead mb-5">Say goodbye to paywalls and enjoy seamless browsing of articles, news, and more with Paywall-Free Reader.</p>
      <a href="#" class="btn btn-light btn-lg">Install Now</a>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-5">
    <div class="container text-center">
      <h2 class="mb-5">Key Features</h2>
      <div class="row">
        <div class="col-md-4">
          <i class="fas fa-lock-open feature-icon mb-3"></i>
          <h3 class="feature-title">Bypass Paywalls</h3>
          <p>Access articles and news without interruptions by bypassing paywalls on supported websites.</p>
        </div>
        <div class="col-md-4">
          <i class="fas fa-globe feature-icon mb-3"></i>
          <h3 class="feature-title">Unrestricted Browsing</h3>
          <p>Enjoy unrestricted access to online content without any limitations.</p>
        </div>
        <div class="col-md-4">
          <i class="fas fa-check feature-icon mb-3"></i>
          <h3 class="feature-title">Simple and Easy-to-Use</h3>
          <p>Install Paywall-Free Reader with a click and start browsing seamlessly.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Centered Section -->
  <section class="centered-section text-center">
    <div class="container">
      <h2 class="mb-4">Install Paywall-Free Reader Now</h2>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="input-group">
            <input id="searchInput" type="search" class="form-control form-control-lg" placeholder="Enter URL here..." aria-label="Search">
            <div class="input-group-append">
              <button class="btn btn-primary btn-lg" type="button">Go</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

