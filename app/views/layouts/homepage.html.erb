  <style>
    /* Custom styles */
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
    }
    .hero-section {
      background-color: #007bff;
      color: #fff;
      padding: 100px 0;
    }
    .feature-icon {
      font-size: 3rem;
      color: #007bff;
    }
    .feature-title {
      margin-top: 20px;
    }
    .centered-section {
      background-color: #fff;
      padding: 50px 0;
    }
    .footer {
      background-color: #343a40;
      color: #fff;
      padding: 30px 0;
    }
  </style>
